.video .category {
	margin-top: 20px;
	float: right;
}

.video .category span {
	text-transform: uppercase;	
}

.video .title {
	padding: 0;
}

.video .embed iframe {
	width: 550px;
	height: 300px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.video .social {
	padding-left: 30px;
}

.video .description {
	margin-top: 10px;
}
.video .description p {
	line-height: 70%;
	font-weight: 600;
}

.vertical-seperator {
	margin-top: 5px;
	position: absolute;
	height: 500px;
	padding-right: 5px;
}



.episodes {
	width: 280px;
	height: 500px;
	overflow: scroll;
}


.episode {
	width: 256px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 10px;
}

div.episode-image {
    position:relative; /* important(so we can absolutely position the description div */  
}

.episode-image img {
	width: 256px;
	height: 144px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.episode-image img:hover {
	-moz-box-shadow:    0px 1px 2px 2px #333333;
	-webkit-box-shadow: 0px 1px 2px 2px #333333;
	box-shadow:         0px 1px 2px 2px #333333;	
}

.episode-image .episode-description {
    position:absolute; /* absolute position (so we can position it where we want)*/
    bottom:3px; /* position will be on bottom */
    left:0px;
    background-color:black;
    color:white;
    width: 256px;
    text-align: center;
    opacity: 0.7;
    -moz-opacity: 0.7;
    filter:alpha(opacity=7);
}

.episode-image .description_content {
    padding:10px;  
}

.episode-info .episode-interviewee {
	font-weight: bold;
}

.episode-info {	
	padding-bottom: 25px;	
}

.episode-info .category {
	float: right;

}

.nspire-logo {
	padding-top: 0px;
	width: 128px; 
	height: 45px;
	margin-left: 70px;
}

.comments-seperator {
	padding-top: 10px;
	padding-bottom: 10px;
	width: 98%;
}

.fb-comments {
	width: 800px;
	padding-left: 25px;
	padding-right: 25px;
}
