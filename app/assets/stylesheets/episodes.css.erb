.scroll-by-div {
	position: absolute;
	top: 50%;
}

.video {
	margin-top: 15px;
	width: 800px;
	margin-right: auto;
	margin-left: auto;
}

.video .title {
	text-align: right;
}

.video .title p {
	font-weight: bold;
	text-transform: uppercase;
}

.video .interview-description {
	position: relative;		
}

.video .embed iframe {
	width: 800px;
	height: 450px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.video .social {
	position: relative;
	display: block;
	margin-top: 8px;
	height: 64px;
	width: 140px;
	float: right;
}

.video .social .facebook {
	position: absolute;
	bottom: 0;
	right: 0;
}

.video .social .twitter {
	position: absolute;
	bottom: 0;
	top: 1px;
	right: 58px;
}

.video .description {
	margin-top: 4px;
	text-align: left;
}

.video .description p {	
	line-height: 100%;
	text-transform: uppercase;
}

.video .long-description {
	color: gray;
}

.vertical-seperator {
	position: absolute;
	margin-left: -10px;
	margin-top: 10px;
	height: 500px;
	padding-right: 10px;
}

.episodes-indicator {
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    right: 10px;
    bottom: 10px;
    width: 50px;
    height: 50px;

    background-image: url(<%= asset_path "down.png" %>);
    background-repeat: no-repeat;
    background-position: 50% 80%;
		-webkit-border-radius: 5px;
		-moz-border-radius: 5px;
		border-radius: 5px;    
		text-align: center;
}

.episodes-indicator p {
	font-size: 12px;
	margin-top: 5px;
	font-weight: bold;
	color: #676767;
}

.episode {
	display: inline-block;
	width: 192px;
	padding-top: 5px;
	padding-left: 5px;
	white-space: normal;
	font-size: 12px;
}

div.episode-image {
    position:relative; /* important(so we can absolutely position the description div */  
}

.episode-image img {
	width: 192px;
	height: 131px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.episode-image img:hover {
	-moz-box-shadow:    0px 1px 2px 2px #333333;
	-webkit-box-shadow: 0px 1px 2px 2px #333333;
	box-shadow:         0px 1px 2px 2px #333333;	
}

.episode-image .episode-description {
    position:absolute; /* absolute position (so we can position it where we want)*/
    bottom:3px; /* position will be on bottom */
    left:0px;
    background-color:black;
    color:white;
    width:192px;
    text-align: center;
    opacity: 0.7;
    -moz-opacity: 0.7;
    filter:alpha(opacity=7);
}

.episode-image .description_content {
    padding:10px;
    font-weight: bold;
}

.episode-info .episode-interviewee {
	font-weight: bold;
}

.episode-info {	
}

.comments-seperator {
	left: 0;
	position: absolute;
	height: 1px;
	width: 100%;
	margin-left: auto;
	margin-right: auto;
	display: block;
}

.comments {
	margin-top: 15px;
}
.fb-comments {
	padding-top: 4px;
}

.post-fold {
	margin-top: 20px;
	display: block;
	margin-right: auto;
	margin-left: auto;
	width: 800px;
	padding-bottom: 10px;
}

.underlined {
	border-bottom: 1px #333 solid;
}


.footer {
	padding-bottom: 155px;
}