.video {
	margin-top: 5px;
	width: 800px;
	margin-right: auto;
	margin-left: auto;
}

.video .category {
	padding-right: 5px;
	padding-bottom: 5px;
	float: right;
}

.video .category span {
	text-transform: uppercase;
}

.video .title {
	position: relative;		
}

.video .title h2 {
	display: inline-block;
	padding: 5px;
	line-height: 20px;
}

.video .title p {
	font-weight: bold;
}

.video .embed iframe {
	width: 800px;
	height: 450px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.video .social {
	margin-top: 2px;
	width: 290px;
	float: right;
	text-align: right;
}

.video .social .social-elem {
	vertical-align: top;
}

.video .description {
	text-align: right;	
}

.video .description p {	
	line-height: 100%;
	font-weight: 600;
}

.video .long-description {
	color: gray;
}

.vertical-seperator {
	position: absolute;
	margin-left: -10px;
	margin-top: 10px;
	height: 500px;
	padding-right: 10px;
}

.episodes {
	display: block;
	margin-left: auto;
	margin-right: auto;
	width: 200px;
	max-height: 500px;
	overflow: auto;
}

.episode {
	width: 192px;
	padding-top: 5px;
	padding-left: 5px;
}

div.episode-image {
    position:relative; /* important(so we can absolutely position the description div */  
}

.episode-image img {
	width: 192px;
	height: 131px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.episode-image img:hover {
	-moz-box-shadow:    0px 1px 2px 2px #333333;
	-webkit-box-shadow: 0px 1px 2px 2px #333333;
	box-shadow:         0px 1px 2px 2px #333333;	
}

.episode-image .episode-description {
    position:absolute; /* absolute position (so we can position it where we want)*/
    bottom:3px; /* position will be on bottom */
    left:0px;
    background-color:black;
    color:white;
    width:192px;
    text-align: center;
    opacity: 0.7;
    -moz-opacity: 0.7;
    filter:alpha(opacity=7);
}

.episode-image .description_content {
    padding:10px;
    font-weight: bold;
}

.episode-info .episode-interviewee {
	font-weight: bold;
}

.episode-info {	
}

.nspire-logo {
	margin-top: 10px;
	display: block;
	width: 28px;
	margin-left: auto;
	margin-right: auto;
}

.comments-seperator {
	left: 0;
	position: absolute;
	height: 1px;
	width: 100%;
	margin-left: auto;
	margin-right: auto;
	display: block;
}

.comments {
	width: 600px;
}
.fb-comments {
	padding-top: 4px;
}

.post-fold {
	margin-top: 10px;
	padding-left: 40px;
	padding-right: 40px;
	display: block;
	margin-right: auto;
	margin-left: auto;
	padding-bottom: 10px;
}

.underlined {
	border-bottom: 1px #333 solid;
}
