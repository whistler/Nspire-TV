.video .category {
	margin-top: 20px;
	padding-right: 5px;
	float: right;
}

.video .category span {
	text-transform: uppercase;
}

.video .title {
	padding: 0;
}

.video .embed {

}

.video .embed iframe {
	width: 616px;
	height: 347px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.video .social {
	float: right;
	width: 120px;
}

.video .description {
	margin-top: 10px;
}

.video .description p {
	line-height: 70%;
	font-weight: 600;
}

.video .long-description {
	color: gray;
}

.vertical-seperator {
	margin-top: 5px;
	position: absolute;
	height: 500px;
	padding-right: 5px;
}

.episodes {
	width: 280px;
	height: 500px;
	overflow: auto;
}

.episode {
	width: 233px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 10px;
	padding-top: 10px;
}

div.episode-image {
    position:relative; /* important(so we can absolutely position the description div */  
}

.episode-image img {
	width: 233px;
	height: 131px;
	-moz-box-shadow:    0px 1px 2px 1px #333333;
	-webkit-box-shadow: 0px 1px 2px 1px #333333;
	box-shadow:         0px 1px 2px 1px #333333;
}

.episode-image img:hover {
	-moz-box-shadow:    0px 1px 2px 2px #333333;
	-webkit-box-shadow: 0px 1px 2px 2px #333333;
	box-shadow:         0px 1px 2px 2px #333333;	
}

.episode-image .episode-description {
    position:absolute; /* absolute position (so we can position it where we want)*/
    bottom:3px; /* position will be on bottom */
    left:0px;
    background-color:black;
    color:white;
    width: 233px;
    text-align: center;
    opacity: 0.7;
    -moz-opacity: 0.7;
    filter:alpha(opacity=7);
}

.episode-image .description_content {
    padding:10px;
    font-weight: bold;
}

.episode-info .episode-interviewee {
	font-weight: bold;
}

.episode-info {	
}

.episode-info .category {
	float: right;
	padding-bottom: 5px;
}

.episode-info .category span {
	text-transform: uppercase;
	font-size: 10px;
}

.nspire-logo {
	margin-top: 10px;
	display: block;
	width: 28px;
	margin-left: auto;
	margin-right: auto;
}

.comments-seperator {
	padding-top: 10px;
	padding-bottom: 10px;
	width: 98%;
}

.fb-comments {
	padding-left: 50px;
	padding-right: 50px;
}
