@media only screen and (max-device-width: 480px) {
	.container, .inner-container, .post-fold, .fb-comments {
		width: 100%;
	}

	.header {
		text-align: center;
	}
	
	.header a.logo img {
		width: 480px;
		height: 130px;
	}
	
	.header h3 {
		font-size: 2.5em;
		text-align: center;
		padding-bottom: 10px;
	}
	
	.link-bar .links {
		display: none;
		width: 100%;
		padding-right: 0;
	}
	
	.video {
		margin-top: 20px;
		width: 100%;
	}
	
	.video .title {
		text-align: center;
		margin-bottom: 15px;
	}

	.video p {
		font-size: 1.8em;
		line-height: 1em;
	}	
	
	.video span {
		font-size: 0.8em;
	}
	
	.video .embed iframe {
		width: 100%;
		height: 454px;
	}
	
	.video .social {
		float: none;
		margin-left: auto;
		margin-right: auto;
	}
	
	.video .description, .video .long-description {
		width: 90%;
		margin-left: auto;
		margin-right: auto;
	}
	
	.interview {
		float: none;
		width: 856px;
		margin-left: auto;
		margin-right: auto;
		position: static;
		height: 100%;
	}
	
	.interview img {
		float: none;
		width: 856px;
		height: 480px;
		margin-left: auto;
		margin-right: auto;
	}

	.interview .info {
		position: static;
	}
	
	.interview p.title {
		font-size: 2em;
		text-align: center;
	}

	.interview p.name {
		text-align: left;
		font-size: 1.8em;
	}

	.interview p.company {
		font-size: 1.8em;
		text-align: left;
	}
	
	.interview p {
		line-height: 1em;
	}
	
	.interview span.label {
		font-size: 1.8em;
		margin-bottom: 10px;
		padding: 5px 5px 10px 5px;
	}
}