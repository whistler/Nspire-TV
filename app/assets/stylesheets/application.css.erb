body {
	background: url(<%= asset_path "background.png" %>) repeat;
}

.container {
	margin-top: 0px;
}

.inner-container {
	width: 850px;
	margin-left: auto;
	margin-right: auto;
}

.header {
	padding-top: 10px;
}

.header h1 {
	margin-top: 15px;
}

.footer {
	background: url(<%= asset_path "footer_seperator.png" %>) repeat-x;
	padding-top: 15px;
}

.footer p {
	padding-right: 20px;
	text-align: right;
}