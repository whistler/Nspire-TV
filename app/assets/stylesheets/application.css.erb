/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/

body {
	background: url(http://nspire.org/sites/all/themes/Nspire/images/bkgd.png) repeat-x;
}

.container {
	margin-top: 30px;
}

.inner-container {
	margin-top: 10px;
	margin-left: auto;
	margin-right: auto;
}

.link-bar {
	position: absolute;
	top: 0;
	width: 100%;
	font-size: 12px;
}

.link-bar .links ul {
	list-style: none;
}

.link-bar .links {
	width: 550px;
	margin-left: auto;
	padding-right: 200px;
}

.link-bar .links li {
	height: 30px;
	width: 70px;
	line-height: 30px;
	padding-left: 4px;
	padding-right: 4px;
	display: inline-block;
	background: url(<%= asset_path "topbar.png" %>) repeat-x;

	text-align: center;

	-webkit-border-bottom-right-radius: 5px;
	-webkit-border-bottom-left-radius: 5px;
	-moz-border-radius-bottomright: 5px;
	-moz-border-radius-bottomleft: 5px;
	border-bottom-right-radius: 5px;
	border-bottom-left-radius: 5px;
}

.link-bar .links .tv {
	font-weight: bold;
}

.link-bar .links a {
	color: black;
	text-decoration: none;
}

.link-bar .links a:visited {

}

.link-bar .links a:hover {
	font-weight: bold;
}

.header {
	padding-bottom: 10px;
}

.header h2 {
	font-weight: normal;
	color: #006893;
	text-align: right;
	margin-top: 20px;
	font-size: 1.6em;
}

.header .logo img {
	margin-left: 100px;
	width: 200px;
	height: 55px;
}

.seperator {
	position: absolute;
	left: 0;
	height: 1px;
	width: 100%;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

.footer {
	background: url(<%= asset_path "footer_seperator.png" %>) repeat-x;
	padding-top: 15px;
}

.footer p {
	padding-right: 20px;
	text-align: right;
}