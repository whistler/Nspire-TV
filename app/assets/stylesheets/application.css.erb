 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/

body {
	background: url(<%= asset_path "background.png" %>) repeat;
}

.container {
	margin-top: 0px;
}

.inner-container {
	margin-top: 10px;
	margin-left: auto;
	margin-right: auto;
}

.header {
	padding-bottom: 10px;
	text-align: center;
}

.header h2 {
	text-align: right;
	margin-top: 8px;
	font-size: 1.5em;
}

.header .logo img {
	width: 150px;
	height: 41px;
}

.seperator {
	position: absolute;
	left: 0;
	height: 1px;
	width: 100%;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

.footer {
	background: url(<%= asset_path "footer_seperator.png" %>) repeat-x;
	padding-top: 15px;
}

.footer p {
	padding-right: 20px;
	text-align: right;
}