<div class="show-case">
<% @episodes.each do |epi| %>
    <div class="interview">
        <span class="label pull-left"><%= epi.category.title %></span>
        <div class="clear"></div>
        <%= link_to (image_tag epi.video_thumbnail_url), episode_url(epi) %>
        <p class="title"><%= epi.title %></p>
        <div class="info">
            <p class="name"><%= epi.interviewee.name %></p>
            <p class="company">&mdash; <%= epi.interviewee.company %></p>
        </div>
    </div>
<% end %>
</div>