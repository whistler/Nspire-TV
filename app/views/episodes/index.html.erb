	<div class="video">
		<div class="row">
			<h2 class="span5"><%= @featured.title %></h2>
			<div class="span5">
				<div class="category">
					<span class="label"><%= @featured.category.title %></span>
				</div>
			</div>
		</div>
		<!-- Video -->
		<div class="embed">
			<%= raw @featured.video_embed_html %>
		</div>

		<div class="title">
			<div class="social">
					<div class="fb-like social-elem" data-href="<%= episode_url(@featured) || root_path %>" data-send="false" data-layout="box_count" data-width="50" data-show-faces="false" data-action="like"></div>

					<a href="https://twitter.com/share" class="twitter-share-button social-elem" data-url="<%= episode_url(@featured) %>" data-text='"<%= @featured.title %>" - <%= @featured.interviewee.name %> @' data-via="Nspire" data-hashtags="NspireTV" data-count="vertical">Tweet</a>

					<!-- <a href="http://pinterest.com/pin/create/button/?url=<%= episode_url(@featured)%>&media=<%= @featured.video_thumbnail_url %>" class="pin-it-button" count-layout="vertical">Pin It</a> -->
				</div>				
			</div>

			<div class="description">
				<p><%= @featured.interviewee.name %> &mdash;Â <%= @featured.interviewee.position %> at <%= @featured.interviewee.company %></p>
			</div>						
			<div class="long-description">
				<p><%= @featured.description %></p>
			</div>

	</div>

	<div class="post-fold">
		<div class="comments">
			<h4 class="underlined">Comments</h4>
			<div class="fb-comments" data-href="<%= episode_url(@featured) %>" data-num-posts="2" data-width="800"></div>				
		</div>
	</div>

	<div class="episodes-indicator">
		<p>MORE</p>
	</div>

